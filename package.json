{
  "name": "alertmanager-telegram-bot",
  "description": "Yet another Prometheus alertmanager's telegram bot",
  "keywords": ["prometheus", "alertmanager", "telegram", "bot"],
  "version": "1.0.0",
  "main": "src/index.ts",
  "typings": "src/**/*.d.ts",
  "author": "William Artero <william@artero.dev> (https://artero.dev)",
  "license": "MIT",
  "homepage": "https://github.com/wwmoraes/alertmanager-telegram-bot",
  "bugs": "https://github.com/wwmoraes/alertmanager-telegram-bot/issues",
  "repository": "github:wwmoraes/alertmanager-telegram-bot",
  "scripts": {
    "postinstall": "patch-package",
    "prestart": "tsc",
    "start": "node --trace-warnings --unhandled-rejections=strict build/index.js",
    "ngrok": "ts-node scripts/start-ngrok.ts",
    "build": "tsc",
    "analyze": "codeclimate analyze",
    "lint": "eslint -c .eslintrc.yml --ext .ts src",
    "lint:report": "eslint -c .eslintrc.yml --ext .ts --output-file eslint_report.json --format json src",
    "docs": "rm -rf docs/; typedoc --includeDeclarations --excludeExternals --name 'AlertManager Telegram Bot' --exclude '**/__fixtures__/*' --exclude '**/__mocks__/*' --exclude '**/__tests__/*' --exclude '**/__stubs__/*' --exclude '**/*.spec.ts' src",
    "test": "node --trace-uncaught --trace-warnings --trace-exit --unhandled-rejections=strict -r ts-node/register node_modules/.bin/jest --verbose --logHeapUsage --json --outputFile=jest_report.json --testLocationInResults",
    "test:all": "node --trace-uncaught--trace-warnings --trace-exit --unhandled-rejections=strict -r ts-node/register node_modules/.bin/jest --verbose --logHeapUsage --json --outputFile=jest_report.json --testLocationInResults --all",
    "test:debug": "node --trace-uncaught --trace-warnings --trace-exit --unhandled-rejections=strict --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand --detectOpenHandles",
    "coverage": "jest --verbose --coverage --json --outputFile=jest_report.json --testLocationInResults",
    "coverage:all": "jest --verbose --coverage --json --outputFile=jest_report.json --testLocationInResults --all",
    "coverage:watch": "jest --verbose --coverage --watchAll",
    "upload-coverage": "cc-test-reporter format-coverage -t lcov && dotenv-load cc-test-reporter upload-coverage"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 10000,
    "moduleFileExtensions": [
      "js",
      "ts",
      "d.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts",
      "!src/**/*.d.ts",
      "!src/**/I*.ts",
      "!src/**/__fixtures__/*.ts",
      "!src/**/__stubs__/*.ts",
      "!src/**/__mocks__/*.ts",
      "!src/**/*.(spec|test).ts"
    ]
  },
  "dependencies": {
    "dot": "^1.1.3",
    "dotenv": "^8.2.0",
    "encoding-down": "^6.3.0",
    "level-ts": "^2.0.5",
    "memdown": "^5.1.0",
    "messagepack": "^1.1.12",
    "node-fetch": "^2.6.1",
    "patch-package": "^6.2.2",
    "postinstall-postinstall": "^2.1.0",
    "telegraf": "^3.38.0",
    "tslib": "^2.0.1"
  },
  "devDependencies": {
    "@types/abstract-leveldown": "^5.0.1",
    "@types/dot": "^1.1.4",
    "@types/encoding-down": "^5.0.0",
    "@types/levelup": "^4.3.0",
    "@types/memdown": "^3.0.0",
    "@types/node": "^14.10.1",
    "@types/node-fetch": "*",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.8.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.4.0",
    "typescript": "^3.9.7"
  },
  "optionalDependencies": {
    "@types/jest": "^26.0.13",
    "@types/nock": "^11.1.0",
    "dotenv-load": "^2.0.0",
    "g8-typedoc-dark": "^0.1.2",
    "jest": "^26.4.2",
    "jest-environment-node": "^26.3.0",
    "jest-mock-extended": "^1.0.10",
    "ngrok": "^3.3.0",
    "nock": "^13.0.4",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.1",
    "typedoc-plugin-external-module-name": "^4.0.3"
  }
}
