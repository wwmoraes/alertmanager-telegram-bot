{
  "name": "alertmanager-telegram-bot",
  "version": "1.0.0",
  "main": "src/index.ts",
  "typings": "src/**/*.d.ts",
  "author": "William Wagner Moraes Artero <williamwmoraes@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "postinstall": "patch-package",
    "prestart": "tsc",
    "start": "node --trace-warnings --unhandled-rejections=strict build/index.js",
    "ngrok": "ts-node scripts/start-ngrok.ts",
    "build": "tsc",
    "analyze": "codeclimate analyze",
    "lint": "eslint -c .eslintrc.yml --ext .ts src",
    "docs": "typedoc --includeDeclarations --excludeExternals --name 'AlertManager Telegram Bot' --exclude '**/__fixtures__/*' --exclude '**/__mocks__/*' --exclude '**/*.spec.ts' src",
    "test": "jest --verbose --all",
    "test:debug": "node --inspect-brk --trace-warnings --unhandled-rejections=strict -r ts-node/register node_modules/.bin/jest --runInBand --detectOpenHandles",
    "coverage": "jest --verbose --all --coverage",
    "upload-coverage": "cc-test-reporter format-coverage -t lcov && dotenv-load cc-test-reporter upload-coverage"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 10000,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/I*.ts",
      "!src/**/__fixtures__/*.ts",
      "!src/**/*.(spec|test).ts"
    ]
  },
  "dependencies": {
    "dot": "^1.1.3",
    "dotenv": "^8.2.0",
    "level-ts": "^1.12.2",
    "messagepack": "^1.1.10",
    "node-fetch": "^2.6.0",
    "patch-package": "^6.2.2",
    "postinstall-postinstall": "^2.1.0",
    "telegraf": "^3.38.0"
  },
  "devDependencies": {
    "@types/abstract-leveldown": "^5.0.1",
    "@types/dot": "^1.1.4",
    "@types/levelup": "^4.3.0",
    "@types/node": "^14.0.12",
    "@types/node-fetch": "*",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.3.0",
    "typescript": "^3.9.5"
  },
  "optionalDependencies": {
    "@types/fetch-mock": "^7.3.2",
    "@types/jest": "^26.0.0",
    "@types/memdown": "^3.0.0",
    "dotenv-load": "^2.0.0",
    "fetch-mock": "^9.10.2",
    "g8-typedoc-dark": "^0.1.2",
    "jest": "^26.0.1",
    "jest-environment-node": "^26.0.1",
    "jest-mock-extended": "^1.0.9",
    "memdown": "^5.1.0",
    "ngrok": "^3.2.7",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.7",
    "typedoc-plugin-external-module-name": "^4.0.3"
  }
}
